{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "no-console": "warn",
    "no-debugger": "warn",
    "no-alert": "warn",
    "no-unused-vars": "warn",
    "space-infix-ops": "warn",
    "keyword-spacing": "warn",
    "key-spacing": ["warn", { "beforeColon": false, "afterColon": true }],
    "template-curly-spacing": "off",
    "no-mixed-spaces-and-tabs": "warn",
    "comma-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-dangle": ["warn", "never"],
    "arrow-spacing": [
      "warn",
      {
        "before": true,
        "after": true
      }
    ],
    "object-curly-spacing": ["warn", "always"],
    "object-property-newline": "warn",
    "object-curly-newline": [
      "warn",
      {
        "ObjectExpression": {
          "multiline": true,
          "minProperties": 2,
          "consistent": true
        },
        "ObjectPattern": {
          "multiline": true,
          "minProperties": 4,
          "consistent": true
        },
        "ImportDeclaration": {
          "multiline": true,
          "minProperties": 4,
          "consistent": true
        },
        "ExportDeclaration": {
          "multiline": true,
          "minProperties": 3,
          "consistent": true
        }
      }
    ],
    "space-before-blocks": "warn",
    "space-before-function-paren": [
      "warn",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "arrow-parens": ["error", "as-needed"],
    "import/no-named-default": "off",
    "handle-callback-err": "warn",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0
      }
    ],
    "no-trailing-spaces": "error",
    "block-spacing": ["error", "always"],
    "operator-linebreak": ["error", "before"]
  }
}
